#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Backend stil mora biti ƒçist
composer pint:test

# Testovi (bez --parallel radi kompatibilnosti na svim OS-ovima)
php artisan test

# (Opciono) Frontend build ako postoji
if [ -f frontendApp/package.json ]; then
  if pnpm -C frontendApp run | grep -qE "(^| )build( |$)"; then pnpm -C frontendApp -s build; fi
fi
